<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.andy.recruitment.dao.organization.mapper.OrganizationDepartmentMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap"
      type="com.andy.recruitment.dao.organization.entity.OrganizationDepartmentDO">
        <result column="id" property="id" jdbcType="BIGINT"/>
        <result column="organization_id" property="organizationId" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="created_by" property="createdBy" jdbcType="VARCHAR"/>
        <result column="created_time" property="createdTime" jdbcType="TIMESTAMP"/>
        <result column="updated_by" property="updatedBy" jdbcType="VARCHAR"/>
        <result column="updated_time" property="updatedTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
       id,organization_id,`name`, created_by, created_time, updated_by, updated_time
    </sql>

    <select id="select" resultMap="BaseResultMap"
      parameterType="com.andy.recruitment.dao.organization.entity.OrganizationDepartmentQuery">
        select
        <include refid="Base_Column_List"/>
        from organization_department_info
        <where>
            <if test="organizationId != null">
                and organization_id = #{organizationId,jdbcType=BIGINT}
            </if>
            <if test="nameLike != null and nameLike != ''">
                and `name` like CONCAT('%', #{nameLike,jdbcType=VARCHAR},'%')
            </if>
            <if test="departmentIdList != null">
                and id in
                <foreach collection="departmentIdList" item="departmentId" index="index"
                  open="(" close=")"
                  separator=",">
                    #{departmentId,jdbcType=BIGINT}
                </foreach>
            </if>
            <if test="departmentId != null">
                and id = #{departmentId,jdbcType=BIGINT}
            </if>
        </where>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id"
      parameterType="com.andy.recruitment.dao.organization.entity.OrganizationDepartmentDO">
        insert into organization_department_info (
        <include refid="Base_Column_List"/>
        )
        values(
        #{id, jdbcType=BIGINT},
        #{organizationId, jdbcType=BIGINT},
        #{name, jdbcType=VARCHAR},
        #{createdBy, jdbcType=VARCHAR},
        #{createdTime, jdbcType=TIMESTAMP},
        #{updatedBy, jdbcType=VARCHAR},
        #{updatedTime, jdbcType=TIMESTAMP}
        )
    </insert>

    <update id="update"
      parameterType="com.andy.recruitment.dao.organization.entity.OrganizationDepartmentDO">
        update organization_department_info
        <set>
            <if test="name != null and name != ''">
                `name`=#{name, jdbcType=VARCHAR}
            </if>
            <if test="updatedBy != null and updatedBy != ''">
                updated_by=#{updatedBy, jdbcType=VARCHAR}
            </if>
            <if test="updatedTime != null">
                updated_time=#{updatedTime, jdbcType=TIMESTAMP}
            </if>
        </set>
        where id =#{id, jdbcType=BIGINT}
    </update>

</mapper>