<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.andy.recruitment</groupId>
        <artifactId>recruitment-web</artifactId>
        <version>0.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>recruitment-boot</artifactId>
    <packaging>jar</packaging>
    <name>recruitment-boot</name>

    <dependencies>
        <dependency>
            <groupId>com.xgimi.ird</groupId>
            <artifactId>xgimi-base-boot</artifactId>
        </dependency>
        <dependency>
            <groupId>com.andy.recruitment</groupId>
            <artifactId>recruitment-center-client</artifactId>
        </dependency>
        <dependency>
            <groupId>com.andy.recruitment</groupId>
            <artifactId>recruitment-center-server</artifactId>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>dev</id>
            <activation>
                <property>
                    <name>environment.type</name>
                    <value>dev</value>
                </property>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <packaging.environment>dev</packaging.environment>
            </properties>
        </profile>
        <profile>
            <id>product</id>
            <properties>
                <packaging.environment>product</packaging.environment>
            </properties>
        </profile>
    </profiles>
    <build>
        <resources>
            <resource>
                <directory>../recruitment-boot/src/main/resources</directory>
            </resource>
            <resource>
                <directory>../recruitment-boot/src/main/resources/filter/${packaging.environment}
                </directory>
                <filtering>true</filtering>
                <targetPath>${project.build.directory}/conf</targetPath>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>2.7</version>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <classpathPrefix>lib/</classpathPrefix>
                            <mainClass>com.andy.recruitment.web.App</mainClass>
                        </manifest>
                    </archive>
                    <excludes>
                        <exclude>**/*.properties</exclude>
                    </excludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <appendAssemblyId>false</appendAssemblyId>
                    <finalName>${project.name}-${packaging.environment}
                    </finalName>
                    <descriptor>src/main/resources/assembly/assembly.xml</descriptor>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
